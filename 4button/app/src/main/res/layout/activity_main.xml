<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/ed1"
        android:layout_width="106dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="@string/_1st_number"
        android:inputType="text" />

    <EditText
        android:id="@+id/ed2"
        android:layout_width="106dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ed1"
        android:layout_toRightOf="@+id/ed1"
        android:hint="@string/_2nd_number"
        android:inputType="text" />

    <TextView
        android:id="@+id/eql"
        android:layout_width="49dp"
        android:layout_height="31dp"
        android:layout_alignBaseline="@+id/ed1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="111dp"
        android:text="@string/eql"
        android:layout_alignParentRight="true"
        android:layout_marginRight="111dp" />

    <EditText
        android:id="@+id/ed3"
        android:layout_width="106dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:hint="@string/output"
        android:inputType="text" />

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="175dp"
        android:background="@android:drawable/alert_dark_frame"
        android:text="@string/add"
        android:textColor="@color/colorAccent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="84dp" />


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b1"
        android:layout_toEndOf="@+id/ed2"
        android:background="@android:drawable/alert_dark_frame"
        android:text="@string/sub"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@+id/ed2" />


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/b1"
        android:layout_centerVertical="true"
        android:background="@android:drawable/alert_dark_frame"
        android:text="@string/div"
        android:textColor="@color/colorAccent"
        android:layout_alignLeft="@+id/b1" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/ed2"
        android:background="@android:drawable/alert_dark_frame"
        android:text="@string/mul"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@+id/ed2" />
</RelativeLayout>
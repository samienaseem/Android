<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".Main8Activity">


    <EditText
        android:id="@+id/sname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="77dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Full-Name"
        android:inputType="textPersonName"
        android:padding="5dp" />

    <EditText
        android:id="@+id/semail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="139dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:padding="5dp" />

    <EditText
        android:id="@+id/sbranch"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/sdepart"
        android:background="#fff"

        android:ems="10"
        android:hint="Branch name"
        android:inputType="text"
        android:padding="5dp" />

    <EditText
        android:id="@+id/smob"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="172dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Mobile no."
        android:inputType="phone"
        android:maxLength="10"
        android:padding="5dp" />

    <Button
        android:id="@+id/sRegister"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"
        android:background="#ff2200"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Registration Form"
        android:textColor="#ff2200"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/spass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginTop="199dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Create password"
        android:inputType="textPersonName|textPassword"
        android:padding="5dp" />

    <EditText
        android:id="@+id/scpass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="263dp"

        android:background="#fff"
        android:ems="10"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:padding="5dp" />

    <EditText
        android:id="@+id/sdepart"
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"

        android:layout_alignParentStart="true"
        android:layout_marginBottom="226dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Department"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/sjmiid"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="108dp"
        android:background="#fff"
        android:ems="10"
        android:hint="JMI id"
        android:inputType="number"
        android:textColorHint="#ff2200" />

    <RadioGroup
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/sjmiid"
        android:layout_alignParentRight="true">

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14dp"
            android:textColor="#fff"
            android:text="Male"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Female"
            android:textSize="14dp"
            android:textColor="#fff"
            android:textStyle="bold"/>

    </RadioGroup>

</RelativeLayout>
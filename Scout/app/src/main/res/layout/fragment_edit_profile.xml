<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_profile">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background"
        android:id="@+id/edit">

        <EditText
            android:id="@+id/vhname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="49dp"
            android:background="#fff"
            android:ems="10"
            android:hint="Full-Name"
            android:inputType="textPersonName"
            android:padding="5dp" />

        <EditText
            android:id="@+id/vhemail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="107dp"
            android:background="#fff"
            android:ems="10"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:padding="5dp" />

        <EditText
            android:id="@+id/vhbranch"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"

            android:layout_marginBottom="199dp"
            android:background="#fff"
            android:ems="10"
            android:hint="Branch name"
            android:inputType="text"
            android:padding="5dp"
            android:layout_alignParentRight="true" />

        <EditText
            android:id="@+id/vhmobile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="144dp"
            android:background="#fff"
            android:ems="10"
            android:hint="Mobile no."
            android:inputType="phone"
            android:maxLength="10"
            android:padding="5dp" />

        <Button
            android:id="@+id/vhupdate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="21dp"
            android:background="#ff2200"
            android:text="Update"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/vhpass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="162dp"
            android:background="#fff"
            android:ems="10"
            android:hint="Create password"
            android:inputType="textPersonName|textPassword"
            android:padding="5dp" />

        <EditText
            android:id="@+id/hod4"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="215dp"
            android:background="#fff"
            android:ems="10"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:layout_alignParentLeft="true" />

        <EditText
            android:id="@+id/vhdepart"
            android:layout_width="195dp"
            android:layout_height="40dp"

            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/vhbranch"
            android:background="#fff"
            android:ems="10"
            android:hint="Department"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:layout_alignParentLeft="true" />

        <EditText
            android:id="@+id/vhjmiid"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="84dp"
            android:background="#fff"
            android:ems="10"
            android:hint="JMI id"
            android:inputType="number"
            android:textColorHint="#ff2200" />

    </RelativeLayout>
</FrameLayout>
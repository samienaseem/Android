<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">


    <LinearLayout
        android:id="@+id/one"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/rectangle"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:padding="10dp">


        <android.support.v7.widget.AppCompatImageView
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:background="@drawable/pen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"


                android:text="product name and short discription"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:text="Quantity : 1" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:id="@+id/two"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/textView4"
            android:layout_width="205dp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_below="@+id/one"
            android:layout_alignStart="@id/one"

            android:background="@drawable/circle"
            android:padding="10dp"
            android:text="Enter Coupen code"
            android:textSize="16dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="@drawable/circle"
            android:backgroundTint="#00203F"
            android:elevation="2dp"
            android:text="Apply"
            android:textColor="#ADEFD1"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sub Total"
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"
                android:padding="8dp"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shipping Charges"
                android:textSize="16dp"
                android:padding="8dp"
                android:textColor="#000"
                android:layout_marginBottom="5dp"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textFontWeight="2"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textAlignment="textEnd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs. 599.00"
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"
                android:padding="8dp"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs. 75.00"
                android:textSize="16dp"
                android:padding="8dp"
                android:textColor="#000"
                android:layout_marginBottom="5dp"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs. 674.00"
                android:textFontWeight="2"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textAlignment="textEnd" />

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:padding="5dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:backgroundTint="#00203F"
            android:padding="5dp"
            android:text="Continue shopping"
            android:textColor="#ADEFD1"
            android:textSize="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle"
            android:backgroundTint="#ADEFD1"
            android:padding="5dp"
            android:text="Continue to checkout"
            android:textColor="#00203F"
            android:textSize="16dp" />

    </LinearLayout>


    <!-- <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="300dp"
         android:layout_below="@+id/one">


     </LinearLayout>-->


</RelativeLayout>
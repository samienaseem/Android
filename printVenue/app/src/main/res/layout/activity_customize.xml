<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/snackBar"
    android:layout_height="match_parent"
    tools:context=".customizeActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Customize your design"
            android:textColor="#000"
            android:textSize="26dp"
            android:textStyle="bold"
            android:id="@+id/headerCustomize"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/preview"

            android:background="@drawable/examplepen">

            <TextView
                android:layout_width="80dp"
                android:layout_height="22dp"
                android:text="Your Name"
                android:textColor="#fff"
                android:padding="5dp"

                android:textSize="11dp"
                android:layout_marginTop="90dp"
                android:textAlignment="center"
                android:id="@+id/displayName"
                android:layout_marginLeft="120dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customization options"
            android:textColor="#000"
            android:padding="10dp"
            android:textSize="21dp"
            android:gravity="center"
            android:layout_marginTop="8dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"

            android:text="Edit"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp"
            android:backgroundTint="#F2AA4C"
            android:textColor="#fff"
            android:drawableLeft="@drawable/editor"
            android:drawablePadding="10dp"
            android:paddingRight="20dp"
            android:scaleX="1.2"
            android:elevation="4dp"
            android:id="@+id/dialogfragment"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note: Final color of engraving may differ from the one shown. "
            android:padding="7dp"
            android:textColor="#000"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By tapping 'Add to cart', I acknowledge that all unedited text will be left blank and any other unedited customization options will be disregarded in the final print"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#000"
            android:textSize="16dp"/>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="14dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:id="@+id/add"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/preview_design_border"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp">
                    <TextView
                        android:id="@+id/minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_marginRight="3dp"/>
                    <TextView
                        android:id="@+id/plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add +"
                        android:textColor="#FF9800"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:paddingRight="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginLeft="3dp"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="60dp"
                android:paddingRight="10dp"
                android:padding="5dp"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price Rs"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:layout_marginRight="6dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/price"
                    android:textStyle="bold"
                    android:textColor="#289ACE"
                    android:textSize="22dp"/>
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preview design"
                android:textColor="#FF9800"
                android:textStyle="bold"
                android:paddingVertical="4dp"
                android:paddingHorizontal="15dp"
                android:textSize="16dp"
                android:id="@+id/previewT"
                android:background="@drawable/preview_design_border"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to cart"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingVertical="4dp"
                android:paddingHorizontal="15dp"
                android:textSize="16dp"
                android:layout_marginLeft="50dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/addToCart"


                android:background="@drawable/addtocart_border"
                />
        </RelativeLayout>

        </LinearLayout>




    </LinearLayout>

    </ScrollView>

</RelativeLayout>